page{
  position: fixed;
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}
.navbar{
  height: 7%;
  width: 100%;
  flex: none;
  display: flex;
  background: #fff;
  font-size: 30rpx;
  color: #bbbbbb;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 90rpx;
}
.navbar .item.active{
  color: #908df5;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 5rpx;
  background: #908df5;
}
.info{
 display:flex;
 margin-top: 250rpx;
 justify-content: center;
 align-items:center;
 flex-direction: column;
}
.info image { 
  width:300rpx;
  height:300rpx;
}
.info text {
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #908df5;
}
.content {
  height: 93%;
  width: 100%;
}
.tasks {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items:center;
  flex-direction: row;
}
.task {
  display: flex;
  justify-content: center;
  align-items:center;
  flex-direction: row;
  margin-left: 5%;
  margin-top: 20rpx;
  border-radius: 20rpx;
  height: 20%;
  width: 90%;
  color: #fff;
  font: bold;

}
.detail {
  margin-left: 5%;
  height: 80%;
  width: 60%;
  overflow-y: scroll;
}
.start {
  display: flex;
  justify-content: center;
  align-items:center;
  height: 80%;
  width: 40%;
}
.btn {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
  border-radius: 40rpx;
  background-color: rgba(255,255,255, 0.8);
}
.addButton {
  margin-top: 125%;
  margin-left: 8%;
  position: fixed;

}
.sidebar {
  
  background: #908df5;
  transition-property: width;
  transition-duration: 500ms;
  transition-timing-function: ease-in-out;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.condition {
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
}
.input {
  height: 80rpx;
  width: 280rpx;
  background: #fff;
  border-radius: 80rpx;
  margin-top: 20rpx;
  margin-bottom: 15rpx;
  text-align:center;vertical-align:middle;
  line-height: 80rpx;
}
input {
  width: 100%;
  height: 100%;
  text-align:center;vertical-align:middle;
}
.select {
  height: 8%;
  width: 80%;
  text-align:center;vertical-align:middle;
}

.closeBar {
  position: fixed;
  height: 100%;
  width: 50%;
  right: 0;
  z-index: -1;
}