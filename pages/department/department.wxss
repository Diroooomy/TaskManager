/* pages/department/department.wxss */
page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.de {
  border: 1px solid black;
  border-radius: 50rpx;
  height: 60%;
  width: 75%;
}
.department {
  box-shadow: 0px 2px 5px rgba(0,0,0,0.3), 0px 0px 20px rgba(0,0,0,0.1) ;
  border-radius: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-left: 10%;
  margin-top: 4%;
  width: 80%;
  height: 15%;
}
.page {
  width: 75%;
  height: 30%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.input {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  width: 70%;
  height: 30%;
  border: 1px solid black;
  border-radius: 50rpx;
}
.button {
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
image {
  height: 110rpx;
  width: 110rpx;
}