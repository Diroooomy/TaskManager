/* pages/users/users.wxss */
image {
  width: 100%;
  height: 100%;
}
page {
  height: 100%;
  width: 100%;
}
.color {
  position: fixed;
  width: 100%;
  height: 30%;
  background: rgb(119,169,254);
  z-index: -99;
}
.addButton {
  position: fixed;
  width: 25%;
  height: 40%;
  z-index: 99;
  margin-top: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;

}
.page { 
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items:center;
}
.picker {
  background: rgb(255, 255, 255);
  height: 7%;
  width: 90%;
  display: flex;
  justify-content: center;
  align-items:center;
  flex-direction: row;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 6rpx 0 rgba(0,0,0,0.2), 0 4rpx 6rpx 0 rgba(0,0,0,0.19);
}
picker {
  display: flex;
  justify-content: center;
  align-items:center;
  flex-direction: row;
}
.input {
  text-align: center;
  height: 100%;
  width: 280rpx;
}
.userlist {
  background: rgb(255, 255, 255);
  width: 90%;
  height: 82%;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 6rpx 0 rgba(0,0,0,0.2), 0 4rpx 6rpx 0 rgba(0,0,0,0.19);
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items:center;
  flex-direction: row;
}
.user {
  width: 100%;
  height: 18%;
  
  
}
.content {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items:center;
  flex-direction: row;
}
.portrait {
  width: 30%;
  height: 65%;
}
.info {
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  display: flex;
  justify-content: center;
  line-height: 50rpx;
  flex-direction: column;
  width: 40%;
  height: 65%;
}
.id {
  text-align: center;
  width: 30%;
}
.divLine{
  background: #E0E3DA;
  width: 100%;
  height: 2rpx;
 }