/**index.wxss**/
page {
  margin-top:4%;
  position: fixed;
  margin-left: 2%;
  margin-right: 2%;
  height: 96%;
  width: 94%;
  padding: 0;
  border: 3px black solid;
  /* border-top-width: 0px; */
  border-radius: 50rpx;
  display: flex;
  flex-direction: column;
  background-color: rgb(255, 255, 255);
}
.first {
  width: 100%;
  height: 70%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}


.title {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 100%;
  height: 50%;
  text-align: center;

}
.welcome {
  margin-top: 100rpx;
  height: 40%;
  width: 100%;
  font-weight: bolder;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 60rpx;
}
.motto {
  width: 40%;
  font-weight: light;
  font-size: 30rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.second {
  width: 100%;
  height: 20%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.phone {
  height: 10%;
  width: 70%;
  text-align:center;vertical-align:middle;
}

.password {
  margin-top: 10rpx;
  height: 10%;
  width: 70%;
  text-align:center;vertical-align:middle;
}
.root {
  height: 20%;
}
input {
  line-height: 100%;
  border-radius:5px;
  outline:none;
  border-top-style: groove;
  border-right-style: groove;
  border-bottom-style: groove;
  border-left-style: groove;
  border:1px solid #a1a1a1;
}
.btn {
  border-color: black;
  border-width: 5rpx;
  border-style: solid;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}